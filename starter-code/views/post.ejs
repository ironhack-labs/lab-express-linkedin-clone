<div class="container text-center">
    <h1 class="page-title">New post</h1>
    <div class="row justify-content-center">
        <div class="col-sm-8">
            <form id="form" action="/post/<%= userId %>/new" method="POST">
                <div class="form-group">
                    <label for="content">Post content</label>
                    <textarea class="form-control" type="text" name="content"></textarea>
                </div>
                <div class="form-group">
                    <input type="text" value="<%= userId %>" hidden name="creatorId">
                    <input type="text" value="<%= userName %>" hidden name="creatorName"> </div>
                <button class="btn btn-success">Publish post</button>
            </form>
            <a class="btn btn-warning go-back" href="/">Back to homepage</a>
        </div>
    </div>
</div>