<h2>Edit your profile</h2>

<form action="/profile/<%= personInfo.id %>/edit/" method="POST" id="form-container">
  <label for="username">Username</label>
  <input type="text" name="username" value="<%= personInfo.username %>">
  <br><br>
  <label for="password">Password</label>
  <input type="password" name="password" value="<%= personInfo.password %>">
  <br><br>
  <label for="name">Name</label>
  <input type="text" name="name" value="<%= personInfo.name %>">
  <br><br>
  <label for="email">Email</label>
  <input type="text" name="email" value="<%= personInfo.email %>">
  <br><br>
  <label for="summary">Summary</label>
  <input type="text" name="summary" value="<%= personInfo.summary %>">
  <br><br>
  <label for="company">company</label>
  <input type="text" name="company" value="<%= personInfo.company %>">
  <br><br>
  <label for="jobTitle">Job Title</label>
  <input type="text" name="jobTitle" value="<%= personInfo.jobTitle %>">
  <br><br>
  <button>Update</button>
</form>

<a href="/">Go back</a>
