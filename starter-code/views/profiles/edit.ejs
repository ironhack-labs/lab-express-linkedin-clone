
<h2>Edit your profile</h2>

<form action="/profile/<%= session._id %>" method="POST" class="form">
  <label for="name">Name</label><br>
  <input type="text" name="name"
    placeholder="Name" value="<%= session.name %>">
  <br><br>
  <label for="email">Email</label><br>
  <input type="text" name="email"
    placeholder="name@email.com" value="<%= session.email %>">
  <br><br>
  <label for="imageUrl">Image Url</label><br>
  <input type="text" name="imageUrl"
    placeholder="URL of your profile image" value="<%= session.imgUrl %>">
  <br><br>
  <label for="jobTitle">Job Title</label><br>
  <input type="text" name="jobTitle"
    placeholder="Your job title" value="<%= session.jobTitle %>">
  <br><br>
  <label for="company">Company</label><br>
  <input type="text" name="company"
    placeholder="Your company" value="<%= session.company %>">
  <br><br>
  <label for="summary">Summary</label><br>
  <textarea type="text" name="summary"
    placeholder="Summary about yourself" value="<%= session.summary %>"></textarea>
  <br><br>
  <button>Edit your Profile</button>
</form>
