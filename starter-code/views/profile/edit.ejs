<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="page-header">
        <h1>My Profile:
          <small>Here you can edit your data</small>
        </h1>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <form action="/profile/update" method="POST">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <input type="text" value="<%=name%>" name="name" class="form-control" placeholder="Name">
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <input type="email" value="<%=email%>" name="email" class="form-control" placeholder="Email">
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <textarea name="summary" cols="30" rows="10" class="form-control" placeholder="Summary"><%=summary%></textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <input type="text" value="<%=imageUrl%>" name="imageUrl" class="form-control" placeholder="Image URL">
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <input type="text" value="<%=company%>" name="company" class="form-control" placeholder="Company">
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <input type="text" value="<%=jobTitle%>" name="jobTitle" class="form-control" placeholder="Job Title">
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-block btn-primary">Update</button>
        </div>
      </form>
    </div>
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <hr>
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <a href="/auth/logout" class="btn btn-danger">log out</a>
        </div>
      </div>
    </div>
  </div>
</div>