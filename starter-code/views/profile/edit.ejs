<h2>Edit your profile</h2>
<form action="/profile/<%=user._id%>" method="post">
  <label for="name">Name: </label>
  <input type="text" id="name" name="name" value="<%=user.name%>"><br>
  <label for="email">Email: </label>
  <input type="text" id="email" name="email" value="<%=user.email%>"><br>
  <label for="summary">Summary: </label>
  <input type="text" name="summary" value="<%=user.summary%>"><br>
  <label for="imageUrl">Image URL: </label>
  <input type="text" name="imageUrl" value="<%=user.imageUrl%>"><br>
  <label for="company">Company: </label>
  <input type="text" name="company" value="<%=user.company%>"><br>
  <label for="jobTitle">Job Title: </label>
  <input type="text" name="jobTitle" value="<%=user.jobTitle%>"><br>
  <button type="submit">Save Changes</button>
  <button type="submit" formaction="/profile/<%=user._id%>" formmethod="get">Cancel</button>
</form>
