<h2>Edit</h2>

<form action="/profile/<%=user._id%>/edit" method="POST" id="form-container" class="signup">
  <label for="name">Name</label>
  <input type="text" name="name" value=<%=user.name%>>
  <br><br>
  <label for="email">Email</label>
  <input type="text" name="email" value=<%=user.email%>>
  <br><br>
  <label for="password">Password</label>
  <input type="password" name="password">
  <br><br>
  <label for='summary'>Sumary</label>
  <textarea type='text' name='summary' value=<%=user.summary%>></textarea>
  <br><br>
  <label for="imageUrl">ImageUrl</label>
  <input type="text" name="imageUrl" value=<%=user.imageUrl%>>
  <br><br>
  <label for="company">Company</label>
  <input type="text" name="company" value=<%=user.company%>>
  <br><br>
  <label for="jobTitle">Job Title</label>
  <input type="text" name="jobTitle" value=<%=user.jobTitle%>>
  <br><br>
  <% if (typeof(errorMessage) !== "undefined") { %>
    <% errorMessage.forEach((error)=>{%>
      <div class="error-message"><%= error %></div>
    <% }) %>
  <% } %>

  <button>Update the account</button>
</form>

<a href="/">Home</a>
