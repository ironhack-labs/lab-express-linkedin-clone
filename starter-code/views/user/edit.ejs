<div class="container">
        <div class="row text-center">
            <div class="col-xs-12 col-sm-4 col-sm-offset-4">
                <form class="form-signin" action="/profile/<%= user._id %>" method="post">
                    <h2 class="form-signin-heading">Edit profile from user: <%= user.email %></h2>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-at"></i>
                            </span>
                            <input class="form-control login-input" placeholder="Email Address" type="text" name="email" value="<%= user.email %>" readonly>
                        </div>
    
                        <div>
                            <% if(typeof(error) != 'undefined' && error.email) { %>
                            <small class="text-danger"> <%= error.email %> </small>
                            <% } %>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-lock"></i>
                            </span>
                            <input class="form-control login-input-pass" placeholder="Password" type="password" name="password" readonly>
                        </div>
                        <div>
                            <% if(typeof(error) != 'undefined' && error.password) { %>
                            <small class="text-danger"> <%= error.password %> </small>
                            <% } %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                                <span class="input-group-addon">Name</i>
                                    </span>
                            <input class="form-control" placeholder="Name" type="text" name="name" value="<%= user.name %>">
                        </div>
                        <div class="input-group">
                                <span class="input-group-addon">Summary</i>
                                    </span>
                                <input class="form-control" placeholder="Summary" type="textarea" name="summary" value="<%= user.summary %>">
                        </div>
                        <div class="input-group">
                                <span class="input-group-addon">Image URL</i>
                                    </span>
                                <input class="form-control" placeholder="Image URL" type="text" name="imageUrl" value="<%= user.imageUrl %>">
                        </div>
                        <div class="input-group">
                                <span class="input-group-addon">Company</i>
                                    </span>
                                <input class="form-control" placeholder="Company" type="text" name="company" value="<%= user.company %>">
                        </div>
                        <div class="input-group">
                                <span class="input-group-addon">Job title</i>
                                    </span>
                                <input class="form-control" placeholder="Job title" type="text" name="jobTitle" value="<%= user.jobTitle %>">
                        </div>
                        
                        
                        
                    </div>
        
                    <button class="btn btn-primary btn-block btn-center" type="submit">Update</button>
                </form>
            </div>
        </div>   
    </div>