<h1>Edit Post</h1>
<form id="form" action="/profile/<%= userId %>/posts/<%= post._id %>/edit" method="POST">

  <textarea id="content" name="content" rows="10" cols=""><%=post.content%></textarea>
    <% if (typeof(errorMessage) != "undefined") { %>
      <div class="error-message"> <%= errorMessage %> </div>
    <% } %>
  <button type="submit">Save post</button>

</form>