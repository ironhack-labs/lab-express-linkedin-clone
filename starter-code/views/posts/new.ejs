<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="page-header">
        <h1>Publish a comment:
          <small>Here you can edit your data</small>
        </h1>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <form action="/users/:userId/posts" method="POST">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <input type="email" value="<%=email%>" name="email" class="form-control" disabled>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <textarea name="summary" cols="30" rows="10" class="form-control" placeholder="Summary"></textarea>
          </div>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn btn-block btn-primary">Publish!</button>
        </div>
      </form>
    </div>
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <hr>
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <a href="/auth/logout" class="btn btn-danger">log out</a>
        </div>
      </div>
    </div>
  </div>
</div>