<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="page-header">
        <h1>Log in:
          <small>Insert your email and password</small>
        </h1>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <form action="/auth/login" method="POST">

        <div class="form-group <%= typeof error !== 'undefined' && error.email ? 'has-error' : '' %>">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-user"></i>
            </span>
            <input type="text" name="email" class="form-control" placeholder="Username">
          </div>
          <% if (typeof(error) !== 'undefined' && error.email) { %>
            <label class="control-label">
              <%= error.email %>
            </label>
            <% } %>
        </div>

        <div class="form-group <%= typeof error !== 'undefined' && error.password ? 'has-error' : '' %>">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-lock"></i>
            </span>
            <input type="password" name="password" class="form-control" placeholder="Password">
          </div>
          <% if (typeof(error) !== 'undefined' && error.password) { %>
            <label class="control-label">
              <%= error.password %>
            </label>
            <% } %>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-block btn-success">Log In</button>
        </div>
      </form>
    </div>
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <hr>
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          Dont't have an account?
          <a href="/auth/signup">Sign up </a>
        </div>
      </div>
    </div>
  </div>
</div>