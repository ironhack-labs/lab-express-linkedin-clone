<h2>Signup</h2>

<form action="/signup" method="POST" id="form-container">
  <label for="username">Username</label>
  <input type="text" name="username" placeholder="Jon Snow">
  <br><br>
  <label for="password">Password</label>
  <input type="password" name="password" placeholder="Your password">
  <br><br>
  <label for="email">Email</label>
  <input type="text" name="email" placeholder="Your email">
  <br><br>
  <label for="summary">Summary</label>
  <input type="text" name="summary" placeholder="Your summary">
  <br><br>
  <label for="company">Company</label>
  <input type="text" name="company" placeholder="Company where you work">
  <br><br>
  <label for="jobTittle">Job tittle</label>
  <input type="text" name="jobTittle" placeholder="Your job tittle">
  <br><br>
  <label for="profilePic">Your profile picture</label>
  <input type="text" name="imageUrl" placeholder="Your profile pic">
  <br><br>
  <button>Create account</button>

  <p class="account-message">
    Do you already have an account? <a href="/login">Login</a>
  </p>
  
  <% if (typeof(errorMessage) !== "undefined") { %>
    <div class="error-message"><%= errorMessage %></div>
    <% } %>
</form>
