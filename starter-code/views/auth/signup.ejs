<!DOCTYPE html>

    <form id="form" action="/signup" method="POST">
        
        <label>Username <br> <input type="text" name="username" placeholder="AnakinSkywalker"></label>
        <br><br>

        
        <label>Password <br> <input type="password" name="password" placeholder="DeathStar"></label>
        <br><br>

        
        <label>Name <br> <input type="text" name="name" placeholder="Your name please !"></label>
        <br><br>

        
        <label>Email <br> <input type="text" name="email" placeholder="SPAM !!!"></label>
        <br><br>

        <% if (typeof(errorMessage) !== "undefined") { %>
            <div class="error-message"><%= errorMessage %></div>
        <% } %>

        <button>Create account</button>
    </form>