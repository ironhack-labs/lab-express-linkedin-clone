<div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="page-header">
          <h1>Sign up:
            <small>Insert your email and password</small>
          </h1>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <form action="/auth/signup" method="POST">
  
          <div class="form-group <%= typeof error !== 'undefined' && error.email ? 'has-error' : '' %>">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-envelope"></i>
              </span>
              <input type="email" name="email" class="form-control" placeholder="Email">
            </div>
            <% if (typeof(error) !== 'undefined' && error.email) { %>
              <label class="control-label">
                <%= error.email %>
              </label>
              <% } %>
          </div>
  
          <div class="form-group <%= typeof error !== 'undefined' && error.password ? 'has-error' : '' %>">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-lock"></i>
              </span>
              <input id="myPassword" type="password" name="password" class="form-control" placeholder="Password">
            </div>
            <% if (typeof(error) !== 'undefined' && error.password) { %>
              <label class="control-label">
                <%= error.password %>
              </label>
              <% } %>
          </div>
  
          <div class="form-actions">
            <button type="submit" class="btn btn-block btn-primary">Signup</button>
          </div>
        </form>
      </div>
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <hr>
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              Have already an account?
              <a href="/auth/login">Log in </a>
            </div>
          </div>
        </div>
    </div>
  </div>