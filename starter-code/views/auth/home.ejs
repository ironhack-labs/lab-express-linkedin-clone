<% if(typeof user != 'undefined' && user.email) { %>
<h2>Welcome username: [ <%= typeof user != 'undefined' && user.email ? user.email : '' %> ]</h2>
<hr>
<a href="/profile/<%= user._id %>">
    <button type="button" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-view"></span> View profile
    </button>
</a>
<a href="/profile/<%= user._id %>/edit">
    <button type="button" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-edit"></span> Edit profile
    </button>
</a>
<a href="/logout">
    <button type="button" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-log-out"></span> Log out
    </button>
</a>

<% } else { %>
    <p>You must login to access this page</p>
    <a href="/login">
        <button type="button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-log-in"></span> Log in
        </button>
    </a>
<% } %>