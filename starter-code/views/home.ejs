<h1>Welcome <%= user.name %>!</h1>
<a href="/profile/<%=user._id%>"><button>My profile</button></a>
<a href="/users/<%=user._id%>/posts/new"><button>New Post</button></a>
<a href="/logout"><button>Logout</button></a>


<div>
  <h2><%= user.name %> posts</h2>
  <% if (posts.length > 0) { %>
    <% posts.forEach(function(e) { %>
      <div class="newpost">
        <p><%= e.content %></p>
            </div>
    <% }) %>
  <% } else { %>
    <div>
      <p>@<%= user.name %> hasn't posted yet.</p>
    </div>
  <% } %>
</div>
