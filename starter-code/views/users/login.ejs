<% layout('../layouts/main') %>

<form id="form" action="/users/login" method="POST">
    <label for="username">Username</label>
    <br>
    <input type="text" name="username">

    <br>
    <br>
    <label for="password">Password</label>
    <br>
    <input type="password" name="password">
    <br>
    <br>

    <button>Login</button>
    <% if (typeof(errors) != "undefined") { %>
        <p>
            <%= errors %>
        </p>
    <% } %>
</form>